<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>


    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />

</head>
<body>
    <nav class="navbar navbar-expand-lg bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Saridag.com</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="Member" asp-action="Index">Üye Anasayfa</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>
    <div class="container" style="margin-top:10px">
        <div class="row">
            <div class="col-md-8">
                @RenderBody()

            </div>
            <div class="col-md-4">
                <h3 class="text-center">Menü</h3>
                <a class="btn btn-info w-100  " asp-controller="Member" asp-action="PasswordChange"> Şifre Değiştirme </a>
                <a class="btn btn-info w-100 mt-2" asp-controller="Member" asp-action="UserEdit"> Kullanıcı Düzenleme </a>
                <a class="btn btn-info w-100 mt-2" asp-controller="Member" asp-action="Logout" asp-route-returnUrl="/Home/Index"> Çıkış Yap </a>
            </div>
        </div>
    </div>
</body>
</html>
