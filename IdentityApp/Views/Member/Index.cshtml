@model UserViewModel


@{ 
    ViewData["Title"] = "Index";
    Layout = "~/Views/Member/_MemberLayout.cshtml";
}

<h3 class="text-center">Kullanıcı Bilgileri</h3>
<div class="row">
    <div class="col-sm-3">
        <img style="width:100%" src="@Model.Picture" />
    </div>
    <div class="col-sm-9">
        <table class="table table-bordered table-striped">
            <tr>
                <th class="text-center">Kullanıcı İsmi</th>
                <td>@Model.UserName</td>
            </tr>
            <tr>
                <th>E Posta</th>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <th>Telefon Numarası</th>
                <td>@Model.PhoneNumber</td>
            </tr>
            <tr>

                <th>City</th>
                <td>
                    @if (!String.IsNullOrEmpty(Model.City))
                    {
                        @Model.City
                    }
                    else
                    {
                        <span>Belirtilmemiş</span>
                    }
                </td>
            </tr>
            <tr>
                <th>Doğum Tarihi</th>
                <td>
                
                @if (Model.BirthDay!=null)
                {
                    @Model.BirthDay?.ToShortDateString()
                }
                else
                {
                    <span>Belirtilmemiş</span>
                }


            </tr>
            <tr>
                <th>Cinsiyet</th>
                <td>@Model.Gender</td>
            </tr>
        </table>
    </div>
</div>
 